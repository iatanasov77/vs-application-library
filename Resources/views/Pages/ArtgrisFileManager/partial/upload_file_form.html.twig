{% import "@VSApplication/Macros/form.html.twig" as vs_form %}

{% if formErrors is defined %}
    {{ vs_form.errors( formErrors ) }}     
{% endif %}
                    
{% set method = "POST" %}
{{ form_start(form, { 'attr': {'class': 'form-horizontal '}, 'method': method }) }}
    <div class="form-group">
        {{ form_label(form.directory, null, {
            'label_attr': {'class': 'col-form-label'}
            }) 
        }}
        {{ form_widget(form.directory, {'attr': {'class': 'form-control'}}) }}
    </div>
    
    <div class="form-group mb-3">
    
        <label for="upload_file_form_file" class="col-form-label">
            {{ 'vs_cms.form.filemanager.file_lable'  | trans( {},'VSCmsBundle' ) }}
        </label>
        <div class="form-field-file">
            {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(form.file, null, {
                'label_attr': {'class': 'input-group-text'}
                
                }) 
            }}
        </div>
    </div>
    <div class="mb-3">&nbsp;</div>

    {{ vs_form.buttons( form ) }}
{{ form_end(form, {'render_rest': false}) }}
