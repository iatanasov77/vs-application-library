<table class="table table-striped table-advance table-hover">
    <thead>
        <tr>
            <th width="50">N</th>
            <th>{{ 'vs_cms.template.filemanager_update_files_table_name' | trans( {},'VSCmsBundle' ) }}</th>
            <th>{{ 'vs_cms.template.filemanager_update_files_table_date' | trans( {},'VSCmsBundle' ) }}</th>
            <th>{{ 'vs_cms.template.filemanager_update_files_table_size' | trans( {},'VSCmsBundle' ) }}</th>
            <th>{{ 'vs_cms.template.filemanager_update_files_table_dimension' | trans( {},'VSCmsBundle' ) }}</th>
            <th width="150">{{ 'vs_cms.template.filemanager_update_files_table_actions' | trans( {},'VSCmsBundle' ) }}</th>
        </tr>
    </thead>
    <tbody>
    {% for file in fileManagerFiles %}
        <tr>
            <td>{{ loop.index }}</td>
    
            <td>
                <img src="{{ file.gaufrette_file.key|imagine_filter('file_manager_files_thumb') }}" />
                {{ file.metadata.original_name }}
            </td>
            <td>{{ file.gaufrette_file.mtime | date( "d/m/Y h:i:s" ) }}</td>
            <td>{{ file.gaufrette_file.size | readable_filesize }}</td>
            <td>{% if file.metadata.dimension is iterable %}{{ file.metadata.dimension[0] }} x {{ file.metadata.dimension[1] }}{% endif %}</td>
            
            <td>
            {#
                <div class="btn-group">
                	<a class="btn btn-outline-primary pagePreview"
                		data-url="{{ path( 'vs_cms_pages_preview', {'pageId': item.id, 'locale': app.request.locale} ) }}" 
    					href="javascript:void(0);" 
                		title="{{ 'vs_cms.template.button_preview' | trans( {},'VSCmsBundle' ) }}"
                	>
                        <i class="fas fa-eye" style="color: #be4bdb;"></i>
                    </a>
                    <a class="btn btn-outline-primary pageClone" 
                    	data-url="{{ path( 'vs_cms_pages_clone', {'pageId': item.id} ) }}"
    					href="javascript:void(0);" 
                    	title="{{ 'vs_cms.template.button_clone' | trans( {},'VSCmsBundle' ) }}"
                    >
                        <i class="fas fa-clone" style="color: #495057;"></i>
                    </a>
                    <a class="btn btn-primary"
                    	href="{{ path('vs_cms_pages_update', {'id': item.id}) }}"
                    	title="{{ 'vs_cms.template.button_edit' | trans( {},'VSCmsBundle' ) }}"
                    >
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="btn btn-danger btnDeleteResource" 
                    	href="{{ path('vs_cms_pages_delete', {'id': item.id}) }}"
                    	data-csrfToken="{{ csrf_token( item.id ) }}"
                    	data-redirectUrl="{{ path( 'vs_wgp_tablature_index' ) }}"
                    	title="{{ 'vs_cms.template.button_delete' | trans( {},'VSCmsBundle' ) }}"
                    >
                        <i class="icon_close_alt2"></i>
                    </a>
                </div>
            #}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
       
