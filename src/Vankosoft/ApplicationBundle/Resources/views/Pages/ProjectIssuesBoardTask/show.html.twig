{% extends "@VSApplication/layout.html.twig" %}

{# Import Macros #}
{% import "@VSApplication/Macros/alerts.html.twig" as alerts %}

{# Override Blocs #}
{% block title %}{{ parent() }} :: {{ 'vs_application.menu.kanbanboard_show' | trans( {},'VSApplicationBundle' ) }} :: {{ task.title }}{% endblock %}
{% block pageTitle %}{{ 'vs_application.menu.kanbanboard_show' | trans( {},'VSApplicationBundle' ) }}: {{ task.title }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xxl-3">
            {# Time Tracking NOT Implemented
                {% include '@VSApplication/Pages/ProjectIssuesBoardTask/partial/card_task_time_tracking.html.twig' %}
            #}
            
            {% include '@VSApplication/Pages/ProjectIssuesBoardTask/partial/card_task_details.html.twig' %}
            {% include '@VSApplication/Pages/ProjectIssuesBoardTask/partial/card_task_members.html.twig' %}
            {% include '@VSApplication/Pages/ProjectIssuesBoardTask/partial/card_task_attachments.html.twig' %}
        </div>
        <!---end col-->
        
        <div class="col-xxl-9">
            <div class="card">
                <div class="card-body">
                    <div class="text-muted">
                        <h6 class="mb-3 fw-semibold text-uppercase">{{ 'vs_application.template.project_issues.summary' | trans( {},'VSApplicationBundle' ) }}</h6>
                        {{ task.summary | raw }}
                        
                        {% if task.issueType == constant( 'Vankosoft\\ApplicationBundle\\Component\\ProjectIssue\\KanbanboardTask::ISSUE_TYPE_EPIC' ) %}
                            {% include '@VSApplication/Pages/ProjectIssuesBoardTask/partial/table_subtasks.html.twig' %}
                        {% endif %}
                        
                        <div class="pt-3 border-top border-top-dashed mt-4">
                            <h6 class="mb-3 fw-semibold text-uppercase">{{ 'vs_application.template.project_issues.task_tags' | trans( {},'VSApplicationBundle' ) }}</h6>
                            <div class="hstack flex-wrap gap-2 fs-15">
                                {% for label in task.labels %}
                                    <div class="badge fw-medium bg-info-subtle text-info">{{ label }}</div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end card-->
            <div class="card">
                <div class="card-header">
                    <div>
                        <ul class="nav nav-tabs-custom rounded card-header-tabs border-bottom-0" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="tab" href="#home-1" role="tab">
                                    {{ 'vs_application.template.project_issues.project_issue_comments_tab' | trans( {},'VSApplicationBundle' ) }} ({{ task.comments | length }})
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#messages-1" role="tab">
                                    {{ 'vs_application.template.project_issues.project_issue_attachments_tab' | trans( {},'VSApplicationBundle' ) }} ({{ task.attachments | length }})
                                </a>
                            </li>
                            {# Time Tracking NOT Implemented
                                <li class="nav-item">
                                    <a class="nav-link" data-bs-toggle="tab" href="#profile-1" role="tab">
                                        {{ 'vs_application.template.project_issues.project_issue_timeentries_tab' | trans( {},'VSApplicationBundle' ) }} (9 hrs 13 min)
                                    </a>
                                </li>
                            #}
                        </ul>
                        <!--end nav-->
                    </div>
                </div>
                
                <div class="card-body">
                    <div class="tab-content">
                        {% include '@VSApplication/Pages/ProjectIssuesBoardTask/partial/tab_task_comments.html.twig' %}
                        {% include '@VSApplication/Pages/ProjectIssuesBoardTask/partial/tab_task_attachments.html.twig' %}
                        
                        {# Time Tracking NOT Implemented
                            {% include '@VSApplication/Pages/ProjectIssuesBoardTask/partial/tab_task_time_entries.html.twig' %}
                        #}

                    </div>
                    <!--end tab-content-->
                </div>
                {# #}
            </div>
            <!--end card-->
        </div>
        <!--end col-->
    </div>
    <!--end row-->
    
    {% include '@VSApplication/Partial/resource-delete.html.twig' %}
{% endblock %}

{% block modals %}
    {{ parent() }}
    
    {% include '@VSApplication/Pages/ProjectIssuesBoardTask/modal/assign_to_member.html.twig' %}
    {% include '@VSApplication/Pages/ProjectIssuesBoardTask/modal/add_attachment.html.twig' %}
    {% include '@VSApplication/Pages/ProjectIssuesBoardTask/modal/create_subtask.html.twig' %}
    {% include '@VSApplication/Pages/ProjectIssuesBoardTask/modal/issue_comment_edit.html.twig' %}
{% endblock %}

{% block head_styles %} 
    {{ parent() }}
    
    {{ encore_entry_link_tags( 'js/project-issues-board-task' ) }}
    {{ encore_entry_link_tags( 'ckeditor5' ) }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/project-issues-board-task' ) }}
    {{ encore_entry_script_tags( 'ckeditor5' ) }}
{% endblock %}
