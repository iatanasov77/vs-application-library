{% if jsonIndex is defined %}
    {% set jsonKey      = ( form.vars.value | keys )[jsonIndex] %}
    {% set jsonValue    = form.vars.value[jsonKey] %}
{% else %}
    {% set jsonKey      = '' %}
    {% set jsonValue    = '' %}
{% endif %}

<div class="row mb-2">
	<div class="col-lg-4">
		{{ form_widget(form.jsonKey, {'attr': {'class': 'form-select'}, 'value': jsonKey}) }}
    </div>
    <div class="col-lg-2">
        {{ form_widget(form.jsonValue, {'attr': {'class': 'form-control'}, 'value': jsonValue}) }}
    </div>
	<div class="col-lg-1">
	    <a href="javascript:;" class="btn btn-success btnAddField"><i class="icon_plus_alt2"></i></a>
	    <a href="javascript:;" class="btn btn-danger btnRemoveField"><i class="icon_close_alt2"></i></a>
	</div>
</div>
