<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">{{ 'vs_cms.modal.page_preview.title' | trans( {},'VSCmsBundle' ) }}</h5>
            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            {{ form_start(formPreview, { 'attr': {'class': 'form-horizontal', 'id': 'formPreview'} }) }} 
            	{{ form_widget(formPreview.pagePreviewUrl) }}    
            	
                <div class="form-group">
                    {{ form_label(formPreview.layout, null, {
                        'label_attr': {'class': 'col-form-label'}
                        }) 
                    }}
                    {{ form_widget(formPreview.layout, {
                        'attr': {
                            'class': 'form-control',
                        }
                    }) }}
                </div>
            {{ form_end(formPreview, {'render_rest': false}) }}
        </div>
        <div class="modal-footer" id="imContainer">
            <button type="button" class="btn btn-primary" id="btnSaveFormPreview">
				{{ 'vs_cms.modal.page_preview.button_preview' | trans( {},'VSCmsBundle' ) }}
			</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
				{{ 'vs_application.form.cancel' | trans( {},'VSApplicationBundle' ) }}
			</button>
        </div>
    </div>
</div>
